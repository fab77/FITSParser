{
  "compilerOptions": {
    "moduleResolution": "node16", // 'node16' or 'nodenext' for Node.jsâ€™ ECMAScript Module Support
    "module": "es6",
    "target": "es6",  // Modern browsers support all ES6 features, so ES6 is a good choice. 
    "lib": ["es6", "dom"],
    "outDir": "lib-esm",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}