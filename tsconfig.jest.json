{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "ES6",
      "lib": ["ES6", "DOM"],
      "outDir": "lib-esm",
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  